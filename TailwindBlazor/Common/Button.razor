@inherits NonVoidComponent
@code
{
    [Parameter] public RenderFragment<NonVoidCustomizable.Args>? Body { get; set; }
    [Parameter] public EventCallback OnClick { get; set; }
}

<NonVoidCustomizable Class=@($"rounded border border-black hover:brightness-90 active:brightness-75 {Class}") Custom=Body @attributes=Attributes>
    <ChildContent>
        @if(ChildContent is not null)
        {
            @ChildContent
        }
        else
        {
            <text>Button</text>
        }
    </ChildContent>
    <Default Context="args">
        <button type="button" class=@args.Class @attributes=args.Attributes @onclick=OnClick @onclick:preventDefault @onclick:stopPropagation>@args.ChildContent</button> 
    </Default>
</NonVoidCustomizable>