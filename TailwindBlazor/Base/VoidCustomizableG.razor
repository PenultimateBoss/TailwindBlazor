@inherits VoidComponent
@typeparam TValue
@code
{
    [Parameter] public required TValue Value { get; set; }
    [Parameter] public RenderFragment<Args>? Custom { get; set; }
    [Parameter] public RenderFragment<Args>? Default { get; set; }

    public sealed record class Args(string? Class, Dictionary<string, object>? Attributes, TValue Value);
}

@if(Custom is null)
{
    @Default?.Invoke(new Args(Class, Attributes, Value))
}
else
{
    @Custom.Invoke(new Args(Class, Attributes, Value))
}